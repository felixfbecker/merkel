{
  "name": "merkel",
  "version": "0.0.1",
  "description": "Handles your database migration crisis",
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixfbecker/merkel"
  },
  "bin": "./bin/merkel",
  "main": "./dist/index.ts",
  "scripts": {
    "postinstall": "merkel init || exit 0",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rimraf dist",
    "lint": "tslint -c tsconfig.json \"src/**/*.ts\"",
    "typedoc": "typedoc --module es2015 --target es2015 --mode modules --readme none --out typedoc src typings/index.d.ts",
    "test": "mocha \"dist/test/**/*.test.js\" --timeout 5000 --require source-map-support/register",
    "cover": "nyc --require source-map-support/register mocha --timeout 5000 \"dist/test/**/*.test.js\""
  },
  "author": "Felix Becker <felix.b@outlook.com>",
  "license": "ISC",
  "dependencies": {
    "chalk": "^1.1.3",
    "inquirer": "^1.1.2",
    "lodash": "^4.15.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.4.0",
    "node-uuid": "^1.4.7",
    "sql-template-strings": "^2.2.0",
    "update-notifier": "^1.0.2",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "del": "^2.2.2",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "pg": "^6.1.0",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.2",
    "tslint": "^3.15.1",
    "typescript": "^1.8.10",
    "typings": "^1.3.3"
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/test/**/*.js"
    ]
  }
}
