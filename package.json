{
  "name": "merkel",
  "version": "0.0.0-development",
  "description": "Handles your database migration crisis",
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixfbecker/merkel"
  },
  "bin": "./bin/merkel",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json \"src/**/*.ts\"",
    "typedoc": "typedoc --module commonjs --target es2015 --mode modules --readme none --out typedoc src typings/index.d.ts",
    "test": "mocha \"dist/test/**/*.test.js\" --exit --timeout 5000 --require source-map-support/register",
    "cover": "nyc --all --require source-map-support/register mocha --exit --timeout 5000 \"dist/test/**/*.test.js\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg"
  },
  "author": "Felix Becker <felix.b@outlook.com>",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.3.0",
    "inquirer": "^4.0.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.4.0",
    "node-uuid": "^1.4.7",
    "sql-template-strings": "^2.2.0",
    "update-notifier": "^2.3.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "del": "^3.0.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "pg": "^7.4.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^8.2.0",
    "sinon": "^4.1.2",
    "source-map-support": "^0.5.0",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.0.3",
    "typings": "^2.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/test/**/*.js",
      "dist/cli.js"
    ]
  }
}
